<div class="top-img">
  <img src="imgs/nyc01.jpg" class="w-100">
</div>

<div class="container">
  <h2 class="m-3">Employee Login</h2>

  <div class="login-div">
    <form id="login-form" method="post">
      <div class="row m-2">
        <div class="col-1">
          <label for="username" class="col-form-label">Username </label>
        </div>
        <div class="col-5">
          <input type="text" id="username" name="username" class="form-control" required>
        </div>
      </div>
      <div class="row m-2">
        <div class="col-1">
          <label for="passwordLogin" class="col-form-label">Password</label>
        </div>
        <div class="col-5">
          <input type="password" id="password" name="password" class="form-control">
        </div>
      </div>      
      <button type="submit" class="btn btn-primary mx-3" id="login-btn">Submit</button>    
      <label id="response-message"></label>
    </form>  
  </div>
</div>